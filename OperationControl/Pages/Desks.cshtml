@page
@model OperationControl.Pages.DesksModel
@{
    ViewData["Title"] = "Desks";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .text-center {
            position: absolute;
            top: 45%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .desk-button {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            color: black;
            text-decoration: none;
            border: 2px solid white;
            font-size: 18px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .desk-button:hover {
                background-color: blue;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>

        <form method="post">
            <button type="submit" class="desk-button" name="deskIndex" value="1">Desk 1</button>
            <button type="submit" class="desk-button" name="deskIndex" value="2">Desk 2</button>
            <button type="submit" class="desk-button" name="deskIndex" value="3">Desk 3</button>
        </form>
    </div>
</body>
</html>

