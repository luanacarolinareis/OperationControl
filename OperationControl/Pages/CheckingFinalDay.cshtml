@page
@model OperationControl.Pages.CheckingFinalDayModel
@{
    ViewData["Title"] = "Final Day Cheking";
}
<style>

    .custom-container {
        max-width: 400px;
        margin: auto;
        text-align: center;
    }
   
    .custom-form {
        margin-top: 50px;
        
        
    }

    .custom-input {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        margin-bottom: 30px;
        margin-top: 20px;
    }

    .status-text {
        margin-left: 130px; 
    }

    .status-text2 {
        margin-left: 330px;
    }

   

</style>
<div class="text-center">
    <h1 class="display-18 custom-heading">End of day Checking</h1>
</div>

<div class="custom-form">
    <form method="post">
        <div class="form-group row">
            <label asp-for="SeriesNumber" class="col-sm-2 col-form-label">Controlled Tool 1:</label>
            <div class="col-sm-9 d-flex align-items-center">
                <input asp-for="SeriesNumber" class="form-control mr-2" placeholder="Enter the series number" style="width: 200px;">
                <div>
                    <span class="status-text">Status:</span>
                </div>
                <div class="form-check" style="margin-left: 20px;">
                    <input class="form-check-input" type="radio" id="radio1" name="radioGroup" asp-for="Checkbox1" value="Ok">
                    <label class="form-check-label" for="radio1">Ok</label>
                </div>
                <div class="form-check" style="margin-left: 30px;">
                    <input class="form-check-input" type="radio" id="radio2" name="radioGroup" asp-for="Checkbox2" value="Ausente">
                    <label class="form-check-label" for="radio2">Ausente</label>
                </div>
                <div class="form-check" style="margin-left: 40px;">
                    <input class="form-check-input" type="radio" id="radio3" name="radioGroup" asp-for="Checkbox3" value="Danificado">
                    <label class="form-check-label" for="radio3">Danificado</label>
                </div>
                <div class="form-check" style="margin-left: 50px;">
                    <input class="form-check-input" type="radio" id="radio4" name="radioGroup" asp-for="Checkbox4" value="Fora de calibração">
                    <label class="form-check-label" for="radio4">Fora de calibração</label>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="custom-form">
    <form method="post">
        <div class="form-group row">
            <div class="col-sm-2">
                <label class="col-form-label">Non-Controlled Tool 1:</label>
            </div>
            <div class="col-sm-9 d-flex align-items-center">
                <span class="status-text2">Status:</span>
                <div class="form-check" style="margin-left: 20px;">
                    <input class="form-check-input" type="radio" id="radio5" name="radioGroup2" asp-for="Checkbox5" value="Ok">
                    <label class="form-check-label" for="radio5">Ok</label>
                </div>
                <div class="form-check" style="margin-left: 30px;">
                    <input class="form-check-input" type="radio" id="radio6" name="radioGroup2" asp-for="Checkbox6" value="Ausente">
                    <label class="form-check-label" for="radio6">Ausente</label>
                </div>
                <div class="form-check" style="margin-left: 40px;">
                    <input class="form-check-input" type="radio" id="radio7" name="radioGroup2" asp-for="Checkbox7" value="Danificado">
                    <label class="form-check-label" for="radio7">Danificado</label>
                </div>
                <div class="form-check" style="margin-left: 50px;">
                    <input class="form-check-input" type="radio" id="radio8" name="radioGroup2" asp-for="Checkbox8" value="Fora de calibração">
                    <label class="form-check-label" for="radio8">Fora de calibração</label>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="text-right" style="position: fixed; bottom: 80px; right: 20px;">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>











